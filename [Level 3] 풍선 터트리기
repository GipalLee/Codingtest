def solution(a):
    answer = 1
    M = min(a) # 기준
    for _ in range(2): # 기준을 중심으로 왼쪽에서 기준까지 뒤집어서 오른쪽에서 기준까지 실행
        m = a[0]
        i = 1
        while m != M: # 가장 작은 값이 나오기 전 행렬에서 두번째로 작은 값을 찾아 m에 저장
            if m >= a[i]: # 해당 배열이 더 작을경우
                m = a[i]  # 작은 값 교체
                answer += 1 
                # 가장 작은 값과 두번째로 작은 값 사이에 끼어 있지 않다면 살 수 있다
                # a[i] 가 움직이면서 더 작은 값을 발견할 경우 두 번째로 작은 값은 바뀌고
                # 이전값은 끼어있지 않으므로 살 수 있다
            i += 1 # 주어진 배열을 탐색
        a.reverse()
    return answer
